<!DOCTYPE html>
<html>
<head>
    <title>
        <%= title %> 
    </title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- -------------------------------------------- -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
	<script src="jquery.easing.1.3.js" ></script>
	<link rel="stylesheet" href="loginpag.css">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){window.scrollTo(0,1); } </script>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

	<!-- ----------------------------------------------------- -->
</head>
<body>
	<div class="main">
		<div class="row">
			<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
			<div class="signin-form profile">
				<p>Welcome Back!</p>
				<div class="login-form">
					<form action="/" method="post">
						<input type="text" name="logemail" placeholder="Enter E-mail Address" required="">
						<input type="password" name="logpassword" placeholder="Password" required="">
						<div class="tp">
							<input type="submit" value="LOGIN NOW">
						</div>
					</form>
				</div>
				
                
                    <% if (title ==  'Wrong Password') { %>
                        <div class="saipass" style="color: red; ">
                            <i class="fas fa-exclamation-triangle"></i> 
                            Wrong Email Or Password ! Please try again
                        </div>
				<% } %>
				<hr>
                <div class="text-center">
                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                  </div>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="/dangky">Create an Account!</a>
                  </div>
			</div>
			</div>
		</div>
	</div>
	
    <script type="text/javascript">
        
		var passWordField = document.getElementById('password')
		var passWordConfirmField = document.getElementById('password_conf')
		var form = document.getElementById('login')
		function validateMyForm(){
			if(passWordField.value != passWordConfirmField.value){ 
		    	alert("Passwords do not match. Please try again.");
		  	} else {
				  form.submit();
				//   alert("Wrong password or email");
		  	}
		}
	</script>	

</body>
</html>